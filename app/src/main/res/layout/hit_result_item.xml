<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="4dip"
    android:paddingBottom="4dip"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/target_type_name"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/HitResultItem"
        tools:text="sdds"/>

    <TextView
        android:id="@+id/target_unit_name"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/HitResultItem"
        tools:text="sdfddddddds22"/>

    <TextView
        android:id="@+id/hitter_name"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/HitResultItem"
        tools:text="sdfddddddds22"/>

    <TextView
        android:id="@+id/hp_before"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        style="@style/HitResultItem"
        tools:text="sdfdddddfffffffffffffdds22"/>

    <TextView
        android:id="@+id/hp_after"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        style="@style/HitResultItem"
        tools:text="sdfddddddds22"/>

</LinearLayout>